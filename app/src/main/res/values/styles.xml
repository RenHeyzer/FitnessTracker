<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeekDayLabel">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#555</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayCircleBase">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/day_circle_background</item>
    </style>

    <style name="DayCircleGreen" parent="DayCircleBase">
        <item name="android:backgroundTint">#4CAF50</item>
    </style>

    <style name="DayCircleRed" parent="DayCircleBase">
        <item name="android:backgroundTint">#E53935</item>
    </style>

    <style name="DayCircleGray" parent="DayCircleBase">
        <item name="android:backgroundTint">#666666</item>
    </style>
</resources>
